<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/png"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AwalActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:text="Menghitung Rumus Persegi dan Persegi Panjang"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_persegi"
        android:layout_width="200sp"
        android:layout_height="100sp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:backgroundTint="#AF9046"
        android:text="Persegi"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/btn_persegipjg"
        android:layout_width="200sp"
        android:layout_height="100sp"
        android:layout_gravity="center"
        android:layout_marginTop="75dp"
        android:backgroundTint="#AF9046"
        android:text="Persegi Panjang"
        android:textColor="@color/black" />
</LinearLayout>